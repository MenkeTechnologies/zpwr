selectp -t 0 # select the first (0) pane 
splitw -h -p 50 # split it into two vertical halves
selectp -t 0 # select the first (0) pane 
splitw -v -p 50 # split it into two horizontal halves
selectp -t 0 # select the top left pane
send-keys "sudo htop" C-m 
selectp -t 1 # select the middle pane 
send-keys "bash $SCRIPTS/colorLogger.sh" C-m
splitw -v -p 30 # split it into two horizontal halves
selectp -t 2

if-shell "uname | grep -q Darwin" 'send-keys "storageShower.sh 8 1" C-m' 'send-keys "sudo glances" C-M'
selectp -t right # select the new, second (1) pane
splitw -v -p 30 
if-shell "uname | grep -q Darwin" 'send-keys "sudo iftop -f \"not port mdns and not port ssdp and not port llmnr and not port upnp-discovery\" -c $HOME/.iftop.conf" C-m' 'send-keys "sudo iftop -c $HOME/.iftop.conf" C-M'
selectp -t 3 # select top right pane
