selectp -t 0 # select the first (0) pane 
splitw -h -p 50 # split it into two vertical halves
selectp -t 0 # select the first (0) pane 
splitw -v -p 50 # split it into two horizontal halves
selectp -t 0 # select the first (0) pane 
send-keys "htop" C-m 
selectp -t 1 # select the middle pane 
send-keys "bash $SCRIPTS/colorLogger.sh" C-m
splitw -v -p 70 # split it into two horizontal halves
selectp -t 2
send-keys "sudo glances --disable-alert --disable-network" C-m
selectp -t right # select the new, second (1) pane
splitw -v -p 30 

send-keys "sudo iftop -c $HOME/.iftop.conf" C-m
