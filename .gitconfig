[user]
    email = 
    name = 

[core]
    editor = vim
    excludesfile = /.gitignore_global
    autocrlf = input
    pager = diff-so-fancy | less --tabs=4 -RFX

[color]
    ui = true

[alias]
    last = log -1 HEAD

[color "diff-highlight"]
    oldNormal = red bold
    oldHighlight = red bold 52
    newNormal = green bold
    newHighlight = green bold 22

[color "diff"]
    plain = blue
    meta = cyan bold
    frag = magenta bold
    commit = magenta
    old = red bold
    new = blue bold
    whitespace = red reverse

[diff]
    tool = vimdiff
