selectp -t 0 # select the first (0) pane 
splitw -h -p 45 # split it into two halves
selectp -t 0 # select the first (0) pane 

splitw -v -p 30 # split it into two halves
selectp -t 0 # select the first (0) pane 
send-keys "htop" C-m 
selectp -t 1 # select the first (0) pane 
send-keys "tail -f /var/log/*.log | lolcat" C-m
selectp -t right # select the new, second (1) pane

