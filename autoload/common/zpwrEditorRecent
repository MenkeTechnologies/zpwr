# -*- mode: sh -*-
# vim: set ft=sh:
function zpwrEditorRecent(){

    local firstdir editor mywords

    editor="$1"

    BUFFER="$(zpwrFzvim $editor)"
    if [[ -z "$BUFFER" ]]; then
        return
    fi
    mywords=( ${(z)BUFFER} )
    BUFFER="$editor $BUFFER"
    zpwrLoggDebug "$BUFFER"
    print -sr -- "$BUFFER"
    eval "$BUFFER"
}

zpwrEditorRecent "$@"
