# -*- mode: sh -*-
# vim: set ft=sh:
function zpwrFasdFList(){

    fasd -f |& perl -lne 'for (reverse <>){do{($_=$2)=~s@$ENV{HOME}@~@;print} if m{^\s*(\S+)\s+(\S+)\s*$}}' |
    eval "$ZPWR_FZF -m --no-sort --border $FZF_CTRL_T_OPTS" |
        perl -pe 's@^([~]*)([^~].*)$@$1"$2"@;s@\s+@ @g;'
}
zpwrFasdFList "$@"
