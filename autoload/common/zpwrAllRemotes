# -*- mode: sh -*-
# vim: set ft=sh:
function zpwrAllRemotes(){

    if ! zpwrIsGitDir; then
        zpwrLoggNotGit
        return 1
    fi

    while read; do
        printf "\x1b[1;34m$REPLY"
        printf "\x1b[0m\x0a"
        git remote show "$REPLY"
    done < <(git remote)
}

zpwrAllRemotes "$@"
