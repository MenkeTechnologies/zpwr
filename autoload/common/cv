# -*- mode: sh -*-
# vim: set ft=sh:
function cv() {

    if [[ -z "$1" ]]; then
        zpwrLogConsoleErr "usage: cv <file...>"
        return 1
    fi

    local firstArg sel firstDir

    firstArg="${${(Az)@}[1]//\"/}"
    firstDir="${firstArg:A:h}"

    BUFFER="builtin cd \"$firstDir\" && $EDITOR ""${@:A}""; zpwrClearList; zpwrIsGitDir && git diff HEAD; "
    print -sr "$BUFFER"
    zpwrLogDebug "$BUFFER"
    eval "$BUFFER"
}

cv "$@"
