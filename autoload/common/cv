# -*- mode: sh -*-
# vim: set ft=sh:
function ___cv() {

    if [[ -z "$1" ]]; then
        zpwrLogConsoleErr "usage: cv <file...>"
        return 1
    fi

    local firstArg sel firstdir

    firstArg="${${(Az)@}[1]//\"/}"
    firstdir=${firstArg:h}
    BUFFER="builtin cd \"$firstdir\"; $EDITOR ""$@""; zpwrClearList; zpwrIsGitDir && git diff HEAD; "
    zpwrLog "$BUFFER"
    eval "$BUFFER"
}

___cv "$@"
