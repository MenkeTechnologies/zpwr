# -*- mode: sh -*-
# vim: set ft=sh:
function zpwrVimAllEdit(){

    BUFFER="$(zpwrFzvimAll)"
    if [[ -z "$BUFFER" ]]; then
        return
    fi
    BUFFER="$EDITOR $BUFFER"
    zpwrLoggDebug "builtin cd $ZPWR"
    eval "builtin cd $ZPWR"

    BUFFER="$BUFFER; zpwrClearList; isGitDir && git diff HEAD"
    zpwrLoggDebug "$BUFFER"
    print -s -- "$BUFFER"
    eval "$BUFFER"
}

zpwrVimAllEdit "$@"
