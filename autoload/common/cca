# -*- mode: sh -*-
# vim: set ft=sh:
function ___cca() {

    if [[ -z "$1" ]]; then
        loggErr "usage: cca <file...>"
        return 1
    fi

    local firstArg sel firstdir

    firstArg="${${(Az)@}[1]//\"/}"
    firstdir=${firstArg:h}
    BUFFER="builtin cd \"$firstdir\"; c ""$@""; "
    logg "$BUFFER"
    eval "$BUFFER"
}

___cca "$@"
