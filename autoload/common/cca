# -*- mode: sh -*-
# vim: set ft=sh:
function ___cca() {

    if [[ -z "$1" ]]; then
        zpwrLogConsoleErr "usage: cca <file...>"
        return 1
    fi

    local firstArg sel firstdir

    firstArg="${${(Az)@}[1]//\"/}"
    firstdir=${firstArg:A:h}
    BUFFER="cd \"$firstdir\"; c ""${@:A}""; "
    print -sr "$BUFFER"
    zpwrLogInfo "$BUFFER"
    eval "$BUFFER"
}

___cca "$@"
