# -*- mode: sh -*-
# vim: set ft=sh:
# nvim ;<tab>
function ___fzf_complete_nvim() {

  _fzf_complete '-m' "$@" < <(
        ZPWR_USE_NEOVIM=true catNvimOrVimInfo | perl -le '@l=reverse<>;@u=do{my %seen;grep{!$seen{$_}++}@l};for(@u){do{$o=$1;($f=$1)=~s@~@$ENV{HOME}@;print $o if -f $f}if m{^>.(.*)}}'
    )
}

___fzf_complete_nvim "$@"
