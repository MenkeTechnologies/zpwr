# -*- mode: sh -*-
# vim: set ft=sh:
function zpwrFzfCommits(){

    BUFFER=""
    zle .kill-whole-line
    if zpwrIsGitDir; then
        BUFFER="vim -v -c Commits! -c quitall"
        zle .accept-line
    else
        zle .kill-whole-line
        zle .accept-line
        return 1
    fi
}

zpwrFzfCommits "$@"
