# -*- mode: sh -*-
# vim: set ft=sh:
function ___ff(){

    if [[ -z "$1" ]]; then
       zpwrLoggErr "ff <cmd> to run <cmd> 10 times" 
       return 1
    fi

    local i

    if [[ ! -d "$1" && ! -f "$1" ]]; then
        for (( i = 0; i < 10;++i )); do
            eval "$@"
        done
    else
       zpwrLoggErr "usage: ff <cmd> to run <cmd> 10 times" 
       return 1
    fi
}

___ff "$@"
