# -*- mode: sh -*-
# vim: set ft=sh:

function zpwrCleanDirs() {

    emulate -L zsh
    setopt nullglob

    local dir files

    if ! (( $#zpwrDirsClean )); then
        zpwrLogConsoleErr "zpwrDirsClean is empty."
        return 1
    fi

    for dir in ${zpwrDirsClean[@]} ; do

        files=("$dir"/*(N))

        if (( $#files )); then
            zpwrPrettyPrint sudo rm -rfv "$dir"/*
            sudo rm -rfv "$dir"/*
        fi
    done
}

zpwrCleanDirs "$@"
