# -*- mode: sh -*-
# vim: set ft=sh:

function zpwrBindInterceptSurround() {
    zle -N interceptDelete
    zle -N interceptSurround
    bindkey -M viins "^?" interceptDelete
    bindkey -M viins '"' interceptSurround
    bindkey -M viins "'" interceptSurround
    bindkey -M viins '`' interceptSurround
    bindkey -M viins "(" interceptSurround
    bindkey -M viins "[" interceptSurround
    bindkey -M viins "{" interceptSurround
}

zpwrBindInterceptSurround "$@"
