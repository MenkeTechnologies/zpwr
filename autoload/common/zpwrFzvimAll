# -*- mode: sh -*-
# vim: set ft=sh:
function zpwrFzvimAll(){

    zpwrListFiles |
        perl -lne '@l=<>;@u=do{my %seen;grep{!$seen{$_}++}@l};for(@u){do{$o=$1;($f=$1)=~s@~@$ENV{HOME}@;$o=~s@$ENV{HOME}@~@;print $o if -f $f}if m{^(.*)}}' |
    eval "$ZPWR_FZF -m -e --no-sort --border $FZF_CTRL_T_OPTS" |
        perl -pe 's@^([~]*)([^~].*)$@$1"$2"@;s@\s+@ @g;'
}

zpwrFzvimAll "$@"
