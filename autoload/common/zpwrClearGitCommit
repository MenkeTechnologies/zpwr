# -*- mode: sh -*-
# vim: set ft=sh:
function zpwrClearGitCommit(){

    if ! isGitDir; then
        loggNotGit
        return 1
    fi

    if [[ -z "$1" ]]; then
        loggErr "usage: zpwrClearGitCommit <regex>"
        return 1
    fi

    local regex

    regex="^$1\$"

    prettyPrint "Removing all commits with /$regex/"

    git filter-branch --commit-filter '
    if [ `git rev-list --all --grep "'"$regex"'" | grep -c "$GIT_COMMIT"` -gt 0 ]
    then
        skip_commit "$@";
    else
        git commit-tree "$@";
    fi'  HEAD
}

zpwrClearGitCommit "$@"
