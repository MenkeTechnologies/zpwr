# -*- mode: sh -*-
# vim: set ft=sh:
function zpwrLastWordDouble(){

    local firstdir editor mywords

    mywords=("${(z)BUFFER}")
    if [[ $BUFFER[-1] == " " ]]; then
        BUFFER="$BUFFER"$mywords[-1]
        CURSOR=$#BUFFER
    else
        BUFFER="$BUFFER "$mywords[-1]
        CURSOR=$#BUFFER
    fi
}

zpwrLastWordDouble "$@"
