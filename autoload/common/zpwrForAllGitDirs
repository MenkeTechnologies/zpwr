# -*- mode: sh -*-
# vim: set ft=sh:
function zpwrForAllGitDirs(){

    if [[ -z "$1" ]]; then
        zpwrLogConsoleErr "usage: zpwrForAllGitDirs <cmd>"
        return 1
    fi

    if [[ ! -s "$ZPWR_ALL_GIT_DIRS" ]]; then
        zpwrPrettyPrint "must regen $ZPWR_ALL_GIT_DIRS first."
        zsh-git-repo-regenAllGitRepos regen
    fi

    zpwrFordir "$*" \
        "${(@f)$(<$ZPWR_ALL_GIT_DIRS)}"
}

zpwrForAllGitDirs "$@"
