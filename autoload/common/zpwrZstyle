# -*- mode: sh -*-
# vim: set ft=sh:
function zpwrZstyle() {

    local sel

    sel=$(zstyle -L | FZF_DEFAULT_OPTS="--height ${FZF_TMUX_HEIGHT:-50%} --min-height 15 --reverse $FZF_DEFAULT_OPTS $FZF_COMPLETION_OPTS --preview 'echo {}' --preview-window down:3:wrap" __fzf_comprun "$cmd" -m)

    if [[ -n "$sel" ]]; then
        BUFFER="$editor $sel"
        print -rz -- "$BUFFER"
    fi
}

zpwrZstyle "$@"
