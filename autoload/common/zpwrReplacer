# -*- mode: sh -*-
# vim: set ft=sh:
function zpwrReplacer(){

    if [[ -z "$2" ]]; then
        zpwrLoggErr "usage: zpwrReplacer <original> <replacement>"
        return 1
    fi

    local orig replace

    orig="$1"
    replace="$2"
    shift 2
    if test -n "$3"; then
        for file in "$@" ; do
            sed -i'' "s@$orig@$replace@g" "$file"
        done
    else
        cat | sed "s@$orig@$replace@g"
    fi
}

zpwrReplacer "$@"
