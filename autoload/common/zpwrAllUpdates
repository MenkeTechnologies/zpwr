# -*- mode: sh -*-
# vim: set ft=sh:
function ___zpwrAllUpdates(){

    (
        builtin cd "$ZPWR" &&
            git pull &&
            {
                if [[ -f "$ZPWR_BANNER_SCRIPT" ]]; then
                    bash "$ZPWR_BANNER_SCRIPT"
                fi
            } &&
            linkConf
    )

   zpwr updatedeps
   zpwr regen
   zpwr update
   if [[ $ZPWR_PLUGIN_MANAGER == zinit ]]; then
    zinit update
    zinit self-update
    zinit compile
    zinit compinit
   fi
}

___zpwrAllUpdates "$@"
