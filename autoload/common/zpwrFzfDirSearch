# -*- mode: sh -*-
# vim: set ft=sh:
function zpwrFzfDirSearch(){

    command find -L . -mindepth 1 \
        \( -path '*/\\.*' -o -fstype 'sysfs' \
        -o -fstype 'devfs' -o -fstype 'devtmpfs' \
        -o -fstype 'proc' \) -prune -o -type d -print \
        -o -type l -print 2> /dev/null | cut -c3- |
        eval "$ZPWR_FZF --border $FZF_CTRL_T_OPTS"
}

zpwrFzfDirSearch "$@"
