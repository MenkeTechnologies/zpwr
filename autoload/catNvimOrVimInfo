function ___catNvimOrVimInfo() {

    local file

    if [[ $ZPWR_USE_NEOVIM == true ]]; then
        file="$ZPWR_NVIMINFO"
        test -e "$file" || touch "$file"
        cat "$file"
    else
        file="$HOME/.viminfo"
        test -e "$file" || touch "$file"
        tac "$file"
    fi
}

___catNvimOrVimInfo "$@"
