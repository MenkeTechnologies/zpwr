function ___scriptToPDF(){

    if [[ -z "$1" ]]; then
        loggErr "usage: scriptToPDF <script>"
        return 1
    fi
    local tempFile

    tempFile="$HOME/__test.ps"

    vim "$1" -c "hardcopy > $tempFile" -c quitall
    ps2pdf "$tempFile" "${1%%.*}".pdf
    rm "$tempFile"
}
___scriptToPDF "$@"
