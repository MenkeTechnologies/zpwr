# -*- mode: sh -*-
# vim: set ft=sh:

declare -a tmpAry
#[[ "$ZPWR_PARENT_PROCESS" == *(#i)(login|tmux|vim|alacritty)* ]] && tmpAry+=(tmux)
tmpAry+=(systemd)

zpwrOsDebVsUbuntu \
    'tmpAry+=(debian)' \
    'tmpAry+=(ubuntu)' \
    'tmpAry+=(yum dnf)' \
    'tmpAry+=(archlinux)' \
    'tmpAry+=(suse)'

if [[ $ZPWR_PLUGIN_MANAGER == zinit ]]; then
    ZPWR_OMZ_PLUGINS+=("${tmpAry[@]}")
else
    plugins+=("${tmpAry[@]}")
fi

unset tmpAry
