function ___zpwrClean() {

    local dir files

    if ! (( $#zpwrDirsClean )); then
        loggErr "zpwrDirsClean is empty."
        return 1
    fi

    for dir in ${zpwrDirsClean[@]} ; do

        files=("$dir"/*(N))

        if (( $#files )); then
            prettyPrint sudo rm -rfv "$dir"/*(N)
            sudo rm -rfv "$dir"/*(N)
        fi
    done
}

___zpwrClean "$@"
