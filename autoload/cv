function ___cv() {

    if [[ -z "$1" ]]; then
        loggErr "usage: cv <file...>"
        return 1
    fi

    local firstArg sel firstdir

    firstArg="${${(Az)@}[1]//\"/}"
    firstdir=${firstArg:h}
    BUFFER="builtin cd \"$firstdir\"; $EDITOR ""$@""; clearList; isGitDir && git diff HEAD; "
    logg "$BUFFER"
    eval "$BUFFER"
}

___cv "$@"
