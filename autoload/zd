function zd() {

    local branch dir
    branch=development
    dir=$1

    if [[ -n "$dir" ]]; then
        if [[ $dir != . ]]; then
            z "$dir"
            prettyPrint "z $dir => cd $(z -e $dir)"
        fi
    fi

    if [[ -n $2 ]]; then
        branch=$2
    fi

    ${=ZPWR_REPO_NAME} fordir "isGitDir && { gco $branch; gffa; git clean -dff && git reset --hard origin/$branch && git clean -dff ; gla; zp gitclearcache; }" *
}

zd "$@"
