function ___locateFzfEditNoZLE(){

    if [[ -z "$1" ]]; then
        loggErr "usage: locateFzfEditNoZLE <editor>"
        return 1
    fi

    local firstArg sel editor

    editor="$1"
    sel="$(getLocate)"

    firstArg="${${(Az)sel}[1]//\"/}"
    if [[ -d "$firstArg" ]]; then
        BUFFER="cd $firstArg;$editor $sel"
    else
        BUFFER="$editor $sel"
    fi

    if [[ -n "$sel" ]]; then
        print -zr -- "$BUFFER"
    else
        return
    fi
}

___locateFzfEditNoZLE "$@"
