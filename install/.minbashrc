function clearList() {
   clear 
   ls -AlhF
}

function cd() {
    builtin cd "$@"
    clearList
}

function f() {
    if [[ -z "$1" ]]; then
        cd -
    else
        cd "$@"
    fi
    
}

function t() {
    cd "/"
    
}

function r() {
    cd ..
    
}

function e() {
    cd "/etc"
    
}

alias l='clearList'
alias la='clearList'
alias ls='clearList'

function c() {
    cat "$@" | less -M -N -R -K -F -X
}
