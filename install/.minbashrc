 clearList() {
   clear 
   ls -AlhF
}

 cd() {
    builtin cd "$@"
    clearList
}

 f() {
    if [[ -z "$1" ]]; then
        cd -
    else
        cd "$@"
    fi
}

 t() {
    cd "/"
}

 d() {
    cd "$HOME/Desktop"
}

 a() {
    cd "$HOME"
}

 r() {
    cd ..
}

 e() {
    cd "/etc"
}

alias l='clearList'
alias la='clearList'
alias ls='clearList'

 c() {
    cat "$@" | less -M -N -R -K -F -X
}
